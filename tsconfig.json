{
	"compilerOptions": {
		"lib": ["es2017"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"target": "es2017",
		"outDir": "dist",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "*.d.ts"]
}
